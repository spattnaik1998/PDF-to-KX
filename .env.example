# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face Configuration (optional, for certain models)
HF_TOKEN=your_huggingface_token_here

# Extraction Engine: "openai" or "rebel" (Hugging Face REBEL model)
EXTRACTION_ENGINE=openai

# Chunking Configuration
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# Embedding Model for Deduplication
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Deduplication Threshold (cosine similarity)
DEDUP_THRESHOLD=0.85

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration
STREAMLIT_PORT=8501
